<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 
		 width="100%" height="100%">
	
	<s:layout>
		<s:VerticalLayout paddingTop="8" paddingBottom="8" paddingLeft="8" paddingRight="8" gap="16"/>
	</s:layout>
	
	<s:Label fontSize="20" fontWeight="bold" text="ONLINE BANKING SYSTEM"/>
	
	<s:VGroup horizontalAlign="right"
			  paddingTop="4" paddingBottom="4" paddingLeft="4" paddingRight="4">
		
		<s:HGroup gap="12" verticalAlign="middle">
			<s:Label width="100" textAlign="right" text="User ID"/>
			<s:TextInput width="250"/>
		</s:HGroup>
		
		<s:HGroup gap="12" verticalAlign="middle">
			<s:Label width="100" textAlign="right" text="Password"/>
			<s:TextInput width="250"/>
		</s:HGroup>
		
		<s:Button label="Login"/>
	</s:VGroup>
	
</s:Group>
